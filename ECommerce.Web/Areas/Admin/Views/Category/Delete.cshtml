@model Category
<a asp-action="List" asp-controller="Category" class="btn btn-danger">Back</a>

<form asp-controller="Category" asp-action="DeleteConfirm" method="post" class="mt-2"> 
    <input asp-for="Id" hidden>
    <div class="card col-md-3">
        <div>
            <div class="card-header bg-black text-light">
                Are you sure to Delete?
            </div>
            <div class=" card-body bg-gradient bg-primary text-white">
                <div>Id:          @Model.Id</div>
                <div>Name:        @Model.Name</div>
                <div>Description: @Model.MaxTime</div>

            </div>
            <div class=" card-footer"> 
                <input type="submit" value="Delete" class="btn btn-dark">
            </div>

        </div>
    </div>
</form>
